---
// index.astro
const links = [
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/adeyinka-m-207986125/' },
  { name: 'ImmigrationBrief', url: 'https://demo.immigrationbrief.com' },
  { name: 'Photography', url: 'https://www.instagram.com/shotbyolamicheal/' },
  { name: 'Obscure thoughts', url: 'https://open.spotify.com/show/66fZuj6icoIAr1EpKUZS67?si=12d7b627a5cd48f0'},
  { name: 'Podcast', url: 'https://www.instagram.com/obscurethoughtsbyolamicheal/' },
  { name: 'Medium', url: 'https://medium.com/@word_addict1' },
];
const email = 'adeyinkamichealola@gmail.com';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Micheal Adeyinka</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <style>
      :root {
        --bg: #0f172a;
        --text: #f1f5f9;
        --muted: #94a3b8;
        --link: #3b82f6;
        --link-hover: #60a5fa;
        --card: #1e293b;
        --shadow: rgba(0, 0, 0, 0.5);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg);
        color: var(--text);
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem;
      }

      .card {
        background: var(--card);
        padding: 2rem 2.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 14px var(--shadow);
        max-width: 480px;
        width: 100%;
        text-align: center;
        animation: fadeIn 0.4s ease-in-out;
      }

      h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
      }

      p {
        color: var(--muted);
        font-size: 1rem;
        margin-bottom: 1.5rem;
      }

      ul {
        list-style: none;
        padding: 0;
      }

      li {
        margin: 0.75rem 0;
      }

      a {
        color: var(--link);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease;
      }

      a:hover {
        color: var(--link-hover);
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }
    </style>
  </head>
  <body>
    <div class="card">
      <h1>Micheal Adeyinka</h1>
      <p>Software Engineer · Photographer · Podcaster · Building @ImmigrationBrief</p>
      <ul>
        {links.map(link => (
          <li><a href={link.url} target="_blank">{link.name}</a></li>
        ))}
      </ul>
	 <div class="email">
		<p style="margin-top: 1.5rem; font-size: 0.95rem;">
			<a href="mailto:adeyinkamichealola@gmail.com" style="color: #3b82f6; font-weight: 500;">
				adeyinkamichealola@gmail.com
			</a>
		</p>
      </div>
    </div>
  </body>
</html>
